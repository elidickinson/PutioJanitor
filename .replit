modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["openssl", "postgresql"]

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "python put_io_manager.py"]

[workflows]
runButton = "Run Manager"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "python_run"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[[workflows.workflow]]
name = "python_run"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python put_io_manager.py --dry-run"

[[workflows.workflow]]
name = "Run Manager"
author = 38452143
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python put_io_manager.py --dry-run"

[[ports]]
localPort = 5000
externalPort = 80
